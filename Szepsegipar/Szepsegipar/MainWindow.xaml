<Window x:Class="Szepsegipar.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Szepsegipar"
        mc:Ignorable="d"
        Title="MainWindow" Height="200" Width="400">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Label Content="Szolgáltatás:" VerticalAlignment="Center"/>
        <ComboBox Grid.Row="0" Margin="100,0,0,0" Width="200"/>

        <Label Content="Dolgozó:" Grid.Row="1" VerticalAlignment="Center"/>
        <ComboBox Grid.Row="1" Margin="100,0,0,0" Width="200"/>

        <Label Content="Időpont:" Grid.Row="2" VerticalAlignment="Center"/>
        <StackPanel Orientation="Horizontal" Grid.Row="2" Margin="100,0,0,0">
            <StackPanel Orientation="Vertical">
                <Label Content="Nap:"/>
                <DatePicker Name="DatePickerNap"/>
            </StackPanel>
            <StackPanel Orientation="Vertical" Margin="20,0,0,0">
                <Label Content="Idő:"/>
                <DatePicker Name="DatePickerIdo" DisplayDateStart="00:00" DisplayDateEnd="23:59" />
            </StackPanel>
        </StackPanel>

        <Button Content="Rögzítés" Grid.Row="3" HorizontalAlignment="Center" Margin="0,10,0,0"/>
    </Grid>
</Window>
