<Window x:Class="Szepsegipar.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Szepsegipar"
        mc:Ignorable="d"
        Title="MainWindow" Height="250" Width="500">
    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.ColumnSpan="3" Text="Szépségszalon" FontSize="24" FontWeight="Bold"
               HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,-100,0,20" />

        <!-- Szolgáltatás kiválasztása -->
        <StackPanel Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,30,40,0">
            <Label Content="Szolgáltatás:" VerticalAlignment="Center"/>
            <ComboBox Width="200" Margin="10,0,0,0" Name="SzolgaltatasComboBox"
                  ItemsSource="{Binding Services}" SelectedItem="{Binding SelectedService}" 
                  BorderThickness="1" BorderBrush="LightGray" Padding="5" />
        </StackPanel>

        <!-- Dolgozó kiválasztása -->
        <StackPanel Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,30,0,0">
            <Label Content="Dolgozó:" VerticalAlignment="Center"/>
            <ComboBox Width="200" Margin="30,0,0,0" Name="DolgozoComboBox"
                  ItemsSource="{Binding Employees}" SelectedItem="{Binding SelectedEmployee}" 
                  BorderThickness="1" BorderBrush="LightGray" Padding="5" />
        </StackPanel>

        <!-- Időpont kiválasztás: Dátum és Idő -->
        <StackPanel Grid.Column="1" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,20,0,0">
            <StackPanel Orientation="Vertical" Margin="0,0,20,0">
                <Label Content="Dátum" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                <DatePicker Name="DatumPicker" Width="200" 
                         SelectedDate="{Binding SelectedDate}" 
                         BorderThickness="1" BorderBrush="LightGray" Padding="5"/>
            </StackPanel>
            <StackPanel Orientation="Vertical">
                <Label Content="Idő" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                <ComboBox Name="IdoComboBox" Width="200" 
                      SelectedItem="{Binding SelectedTime}" 
                      ItemsSource="{Binding AvailableTimes}" 
                      BorderThickness="1" BorderBrush="LightGray" Padding="5"/>
            </StackPanel>
        </StackPanel>

        <!-- Rögzítés gomb -->
        <Button Content="Rögzítés" Width="100" Height="30" Grid.Row="3" 
            HorizontalAlignment="Center" VerticalAlignment="Center" 
            Margin="0,20,0,0" Name="RogzitesGomb" 
            Command="{Binding BookCommand}">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="Yellow" CornerRadius="15" BorderBrush="Transparent">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
    </Grid>

</Window>
