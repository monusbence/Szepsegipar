<Page x:Class="Szepsegipar.FoglalasMegtekintesePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Foglalások megtekintése">
    <Grid Margin="20">
        <TextBlock Text="Foglalások" FontSize="24" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="0,20,0,20"/>

        <ListView Name="FoglalasListView">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Foglalás ID" Width="120" DisplayMemberBinding="{Binding Foglalas_Id}"/>
                    <GridViewColumn Header="Szolgáltatás ID" Width="120" DisplayMemberBinding="{Binding Szolgaltatas_Id}"/>
                    <GridViewColumn Header="Dolgozó ID" Width="120" DisplayMemberBinding="{Binding Dolgozo_Id}"/>
                    <GridViewColumn Header="Ügyfél ID" Width="120" DisplayMemberBinding="{Binding Ugyfel_Id}"/>
                    <GridViewColumn Header="Kezdés" Width="120" DisplayMemberBinding="{Binding Foglalas_Kezdes}"/>
                    <GridViewColumn Header="Befejezés" Width="120" DisplayMemberBinding="{Binding Foglalas_Befejezes}"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Page>